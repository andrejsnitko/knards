/***************** CARDS SECTION *****************/ 
/***************** ACCORDION *****************/ 

#accordion {
    margin-bottom: 0;
}

.tags-inner-wrapper .panel-title {
    height: 100%;
}

.tags-inner-wrapper .panel-default {
    border-radius: 0;
}

.tags-inner-wrapper .panel-default > .panel-heading {
    padding: 0;
    background-color: #ddd;
    border-radius: 0;
}

.tags-inner-wrapper .panel-title a {
    display: block;
    width: 100%;
    height: 100%;

    text-align: center;
    line-height: 30px;
}

.tags-inner-wrapper .panel-body {
    padding: 0 5px 5px 5px;
    overflow-x: hidden;
}

/***************** CARDS SECTION *****************/ 
/***************** TAGS *****************/ 

.tags-inner-wrapper .deselected {
    color: inherit;
    background-color: #f5f5f5;
    border: 1px solid #ddd;
}

.tags-inner-wrapper .deselected:hover {
    color: inherit;
    background-color: #fff;
}

.tags-inner-wrapper .deselected:active,
.tags-inner-wrapper .selected:active {
    color: inherit;
    background-color: #b4d397;
    border: 1px solid #b4d397;
}

.tags-inner-wrapper .selected {
    background-color: #76b041;
    border: 1px solid #76b041;
}

/***************** CARDS SECTION *****************/ 
/***************** MISC *****************/ 

#frm-saveCardForm,
#frm-editCardForm {
    display: none;
}

/***************** FOLDERS & COLLECTIONS SETTINGS *****************/ 

.folders-wrapper,
.collections-wrapper {
    position: fixed;
    z-index: 1;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: rgb(0,0,0);
    background-color: rgba(0,0,0,0.4);
}

.folders-wrapper > div,
.collections-wrapper > div {
    margin: 8% auto;
    padding: 20px 20px 0 20px;
    width: 40%;
    min-height: 600px;

    background-color: #fff;
    border: 1px solid #7c8483;
    border-radius: 0;
    box-shadow: 0 5px 15px rgba(0, 0, 0, .5);
}

.folders-wrapper > div > div > div:last-child,
.collections-wrapper > div > div > div:last-child {
    margin-bottom: 100px;
    width: 40px;
    height: 40px;
}

.folders-wrapper > div > div:first-child,
.collections-wrapper > div > div:first-child {
    padding: 5px;
    height: 525px;
    overflow-y: scroll;

    border: 1px solid #ddd;
    border-radius: 3px;
}

.folders-wrapper > div > div:last-child,
.collections-wrapper > div > div:last-child {
    margin: 5px auto;
    width: 100px;
}

.folders-confirm-delete .modal-content div {
    display: inline-block;
    margin: 5px;
    width: 75px;
}

.folders-confirm-delete .modal-content p {
    text-align: center;
    font-weight: bold;
    font-size: 16px;
}

.folders-wrapper .folder,
.collections-wrapper .ruleset {
    box-sizing: border-box;
    margin-bottom: 5px;

    width: 100%;

    font-size: 16px;
    background-color: #fff;
    border-radius: 3px;
}

.folder-heading,
.ruleset-heading {
    padding: 5px 0;
    width: 100%;

    text-align: center;
    background-color: #ddd;
    border: 1px solid #ddd;
}

.folder-tags,
.edit-ruleset-tags > div,
.edit-ruleset-users > div,
.ruleset-info {
    background-color: #fff;
    border: 1px solid #ddd;
}

.edit-ruleset-tags > div,
.edit-ruleset-users > div {
    margin: 5px 0;
}

.edit-ruleset-tags,
.edit-ruleset-users,
.edit-ruleset-dates > div {
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: flex-start;
    align-items: flex-start;
    align-content: flex-start;
}

.edit-ruleset-tags > div,
.edit-ruleset-users > div,
.edit-ruleset-dates > div > div {
    width: 100%;
}

.edit-ruleset-dates > div > label {
}

.folders-wrapper .folder div a,
.collections-wrapper .ruleset div a {
    float: right;

    margin-right: 12px;

    color: #161925;
    font-size: inherit;
}

.folders-wrapper .folder div a:hover,
.collections-wrapper .ruleset div a:hover {
    color: #7c8483;
}

.new-folder {
    width: 26px;
    height: 26px;

    background-color: #fff;
    border: 1px solid #ddd;
}

.new-folder a {
    display: block;

    width: 100%;
    height: 100%;

    color: #080708;
    font-size: 1rem;
    text-align: center;
    line-height: 25px;
}

.new-folder a i {
    vertical-align: middle;
}

/***************** BUTTONS *****************/ 


/***************** TAGS (parent css: /www/css/tag-basic-style.css) *****************/ 

.panel-body .tag {
    margin: 5px 1px 0 0;
    padding: 2px 6px;
}

.tag {
    display: inline-block;
    margin-right: 5px;

}
.exist {
    background-color: #76b041;
}
.nonexist {
    background-color: #ad2b2b;
}


/***************** ADDITIONAL BOOTSTRAP OVERRIDES *****************/ 

.form-control:focus,
.form-control:active {
    box-shadow: none;
    transition: none;
}
.bootstrap-tagsinput .label {
    width: auto;
    line-height: 2;
    text-align: left;
    margin-bottom: 5px;
}


.tt-cursor {
    background-color: #ac5dad;
}



